<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffff">

	<ImageView
		android:id="@+id/logoITC"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:src="@drawable/baru"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip" />
	<!--
	<TextView
		android:id="@+id/logoITC"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="ICE"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/app_color"
		android:textSize="@dimen/login_header"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"/> -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/launchPanic"
		android:orientation="vertical"
		android:layout_below="@id/logoITC" android:layout_width="wrap_content" android:layout_height="200dp">
		<ImageView
			android:id="@+id/logoPanic"
			android:src="@drawable/pb"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:background="#00ffffff"
			android:padding="0dip" />
	</LinearLayout>

	<GridView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/launchGrid"
		android:textStyle="bold"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:numColumns="3"
		android:columnWidth="60dp"
		android:gravity="center_horizontal"
		android:layout_below="@id/launchPanic"
		android:layout_marginTop="10dp"
		android:verticalSpacing="30dp"
		android:listSelector="#00000000">
	</GridView>

</RelativeLayout>